<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>7-Day Weather Forecast</title>
  <link rel="stylesheet" href="/style.css">
  <script>
    function toggleMode() {
      document.body.classList.toggle("dark-mode");
    }
  </script>
</head>
<body>
  <div class="container animated-border">
    <h1>7-Day Weather Forecast</h1>
    <button onclick="toggleMode()">Toggle Light/Dark Mode</button>
    <form action="/get-forecast" method="POST">
      <input type="text" name="cityState" id="cityState" placeholder="e.g. Mumbai, IN" required>
      <button type="submit">Get Forecast</button>
    </form>

    <% if (location) { %>
      <h2><%= location %></h2>
    <% } %>

    <% if (uvIndex !== null) { %>
      <div class="uv">
        <p>ğŸŒ <strong>UV Index:</strong> <%= uvIndex %></p>
      </div>
    <% } %> 

    <% if (forecast) { %>
      <div class="forecast">
        <% forecast.forEach((day) => { %>
          <div class="day">
            <p><strong><%= day.readableDate %></strong></p>
            <p><img src="/icons/<%= day.weather[0].main.toLowerCase() %>.png" alt="icon" class="weather-icon"></p>
            <p>ğŸŒ¡ Temp: <%= day.temp.day %> Â°C</p>
            <p>â¬† Max: <%= day.temp.max %> Â°C | â¬‡ Min: <%= day.temp.min %> Â°C</p>
            <p>ğŸ’¨ Wind: <%= day.wind_speed %> m/s</p>
            <p>â˜ï¸ Weather: <%= day.weather[0].description %></p>
            <p>ğŸ’§ Humidity: <%= day.humidity %>%</p>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>
  </div>
</body>
</html>